<test-suite>
  <meta>
    <title>Path Test Queries</title>
    <setup>
    </setup>
  </meta>
  <test-cases>
    <include file="query/base-cases.xml" />
  </test-cases>
  <queries>
    <include file="query/path-queries.xml" />
    <query id="ACT">
        <RegexpQuery fieldName="lux_path">ACT(/.*)?</RegexpQuery>
    </query>
    <query id="SCENE">
        <RegexpQuery fieldName="lux_path">SCENE(/.*)?</RegexpQuery>
    </query>
    <query id="ACT_SCENE">
       <RegexpQuery fieldName="lux_path">SCENE/ACT(/.*)?</RegexpQuery>
    </query>
  </queries>
</test-suite>
